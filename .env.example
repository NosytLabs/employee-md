# Employee.md Validator Environment Variables
# Copy this file to .env and configure values as needed

# Enable parallel validation
# EMPLOYEE_MD_PARALLEL=false

# Enable production mode (sanitizes error messages)
# EMPLOYEE_MD_PRODUCTION=false

# Enable verbose logging
# EMPLOYEE_MD_VERBOSE=false

# Suppress output except errors
# EMPLOYEE_MD_QUIET=false

# Cache settings
# EMPLOYEE_MD_CACHE_ENABLED=true
# EMPLOYEE_MD_CACHE_SIZE=100
# EMPLOYEE_MD_CACHE_TTL=300

# Logging configuration
# EMPLOYEE_MD_LOG_LEVEL=INFO
# EMPLOYEE_MD_LOG_FORMAT=text

# Metrics configuration
# EMPLOYEE_MD_METRICS_ENABLED=false
# EMPLOYEE_MD_METRICS_FORMAT=prometheus
